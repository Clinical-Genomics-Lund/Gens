{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jquery": true
    },
    "extends": "standard",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "THREE": "readonly",
        "$SCRIPT_ROOT": "readonly",
        "drawRotatedText": "readonly",
        "createGraph": "readonly"
    },
    "exported": {
        "InteractiveCanvas",
        "OverviewCanvas"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": [2, "always"]
    }
}
